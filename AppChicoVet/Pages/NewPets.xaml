<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppChicoVet.Pages.NewPets"
             Title="NewPets">

    <ScrollView>
        <VerticalStackLayout
           Padding="20"
           Spacing="10">

            <Label
               x:Name="lblVoltar"
               HorizontalTextAlignment="Center"
               Text="↩"
               FontAttributes="Bold"
               Margin="0, -40, 0, 0"
               TranslationX="-225"
               TranslationY="30"
               FontSize="20"
               TextColor="#513635">

                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ChangingPagePet"/>
                </Label.GestureRecognizers>

            </Label>

            <Image 
               Aspect="AspectFit" 
               Source="appicon.png"
               HeightRequest="125"
               WidthRequest="125"/>

            <Label
               x:Name="lblTitle"
               HorizontalTextAlignment="Center"
               Text="Cadastro de Pet"
               Margin="0,-25,0,15"
               FontSize="35"
               TextColor="#513635"/>

            <Label 
             x:Name="lblFoto"
             Text="Foto do Pet"
             WidthRequest="350"/>

            <Label 
             Margin="0, -15, 0, 0"
             x:Name="lblFotoWarning"
             Text="(Pode ser adicionado mais tarde ao perfil)"
             FontSize="12"
             TextColor="#8E6864"
             WidthRequest="350"/>

            <Entry
             x:Name="etrFoto"
             Placeholder="(Anexar arquivo ou arrastar para este campo)"
             WidthRequest="350"/>
            
            <Label 
             x:Name="lblNome"
             Text="Nome do Pet"
             WidthRequest="350"/>

            <Entry
             x:Name="etrNome"
             Placeholder=""
             WidthRequest="350"/>

            <Label 
             x:Name="lblApelido"
             Text="Apelido do Pet (opcional)"
             WidthRequest="350"/>

            <Entry
             x:Name="etrApelido"
             Placeholder=""
             WidthRequest="350"/>

            <Label 
             x:Name="lblNasc"
             Text="Data de Nascimento"
             WidthRequest="350"/>

            <DatePicker
             x:Name="dpNasc"
             WidthRequest="350">
            </DatePicker>


            <Label 
             x:Name="lblGenero"
             Text="Gênero"
             WidthRequest="350"/>

            <Grid
            RowDefinitions="Auto,Auto"
            ColumnDefinitions="Auto,*"
            WidthRequest="350">

                <RadioButton
                  Grid.Row="1"
                  Grid.ColumnSpan="1"
                  x:Name="rbFeminino"
                  Scale=".75"
                  TranslationX="-35"/>

                <Label 
                 Grid.Row="1"
                 Grid.ColumnSpan="1"
                 x:Name="lblGeneroFeminino"
                 Text="Feminino"
                 WidthRequest="250"
                 TranslationX="20"
                 TranslationY="11"/>

                <RadioButton
                 Grid.Row="1"
                 Grid.Column="2"
                 x:Name="rbMasculino"
                 Scale=".75"
                 TranslationX="-140"/>

                <Label 
                 Grid.Row="1"
                 Grid.Column="2"
                 x:Name="lblGeneroMasculino"
                 Text="Masculino"
                 WidthRequest="250"
                 TranslationX="-30"
                 TranslationY="11"/>

            </Grid>

            <Label 
             x:Name="lblRaca"
             Text="Raça"
             WidthRequest="350"/>

            <Picker
               x:Name="pkRaca"
               WidthRequest="350">

                <Picker.ItemsSource>

                    <x:Array Type="{x:Type x:String}">
                        <x:String>Cachorro</x:String>
                        <x:String>Gato</x:String>
                        <x:String>Papagaio</x:String>
                        <x:String>Hamster</x:String>
                        <x:String>Tartaruga</x:String>
                        <x:String>Largarto</x:String>
                    </x:Array>

                </Picker.ItemsSource>

            </Picker>

            <Label 
             x:Name="lblSobre"
             Text="Observações do Pet"
             WidthRequest="350"/>

            <Label 
             Margin="0, -15, 0, 0"
             x:Name="lblSobreWarning"
             Text="(Pode ser adicionado mais tarde ao perfil)"
             FontSize="12"
             TextColor="#8E6864"
             WidthRequest="350"/>

            <Editor
               WidthRequest="350"
               AutoSize="TextChanges"
               x:Name="edSobre">
            </Editor>

            <Button
               x:Name="btnConcluir"
               Text="Adicionar Pet"
               WidthRequest="250"
               TranslationY="50"
               Margin="0,0,0,50"
               BackgroundColor="#513635"
               Clicked="ChangingPagePet"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>