<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppChicoVet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppChicoVet"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="True"
    Shell.NavBarIsVisible="False"
    Title="Chico Veterinário"
    FlyoutBackgroundColor="#513635"
    Shell.TabBarTitleColor="#513635"
    Shell.TabBarForegroundColor="#513635">

    <Shell.ItemTemplate>

        <DataTemplate>

            <Grid
                ColumnDefinitions="50, *"
                Padding="10">

                <Image
                    Source="{Binding Icon}"
                    WidthRequest="20"/>

                <Label
                    Grid.Column="1"
                    Text="{Binding Title}"
                    TextColor="White"/>

            </Grid>

        </DataTemplate>

    </Shell.ItemTemplate>

    <Shell.FlyoutHeader>
        <VerticalStackLayout>

            <Image 
			   Source="appicon.png"
               WidthRequest="120"
               HeightRequest="205"/>

            <Label 
				Text="Menu"
                HorizontalTextAlignment="Center"
                FontSize="30"
                TranslationY="-55"
                TextColor="White"/>

        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>

        <Label
			Text="© Luis Eduardo Boaretto Rigoni - 2404089"
            HorizontalTextAlignment="Center"
            TextColor="White"
            Margin="0, 0, 0, 40"/>

    </Shell.FlyoutFooter>

    <FlyoutItem 
		   Title=""
           FlyoutDisplayOptions="AsMultipleItems">

        <ShellContent 
			        Title="Home"
                    ContentTemplate="{DataTemplate local:MainPage}"
                    Route="MainPage"
                    Icon="home.png"/>

        <ShellContent 
			        Title="Minha Conta"
                    ContentTemplate="{DataTemplate local:Pages.LoginAccount}"
                    Route="LoginAccount"
                    Icon="account.png"/>

        <ShellContent 
			        Title="Meus Pets"
                    ContentTemplate="{DataTemplate local:Pages.MyPets}"
                    Route="MyPets"
                    Icon="newpets.png"/>

        <ShellContent 
		            Title="Minhas Consultas"
                    ContentTemplate="{DataTemplate local:Pages.PetsConsult}"
                    Route="PetsConsult"
                    Icon="petsconsult.png"/>

    </FlyoutItem>

    <ShellContent 
        Title="Sobre nós"
        ContentTemplate="{DataTemplate local:Pages.Info}"
        Route="Info"
        Icon="info.png"/>

</Shell>

